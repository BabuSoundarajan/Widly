
<h2>Movies</h2>
<br />

<table id="movies" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Movies
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ''
                },

                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genreType.name"
                    }
                ]
            });
        });
    </script>
}
