@model Widly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.GenreType.Name</li>
    <li>Release Date : @Model.ReleaseDate.ToLongDateString()</li>
    <li>Added Date : @Model.DateAdded.ToLongDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>

